<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/selector_overlay"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true" android:left="2.0dip" android:top="2.0dip" android:right="2.0dip" android:bottom="2.0dip">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/list_selector_corner" />
                    <solid android:color="@color/selector_overlay" />
                </shape>
            </item>
            <item android:left="2.0dip" android:top="2.0dip" android:right="2.0dip" android:bottom="2.0dip" android:state_activated="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/list_selector_corner" />
                    <solid android:color="@color/selector_overlay" />
                </shape>
            </item>
            <item android:left="2.0dip" android:top="2.0dip" android:right="2.0dip" android:bottom="2.0dip" android:state_hovered="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/list_selector_corner" />
                    <solid android:color="@color/selector_overlay" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@android:id/mask" android:left="2.0dip" android:top="2.0dip" android:right="2.0dip" android:bottom="2.0dip">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/list_selector_corner" />
            <solid android:color="@color/selector_overlay" />
        </shape>
    </item>
</ripple>